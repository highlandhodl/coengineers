      },
      "contentAnalysis": {
        "subjects": ["person", "laptop", "office workspace", "natural light"],
        "colors": ["natural tones", "blue screen glow", "neutral background"],
        "mood": "focused",
        "composition": "environmental portrait",
        "includesText": false
      },
      "seo": {
        "title": "Modern Product Management with AI Workflow Tools",
        "caption": "Integrating Claude Code into daily product management workflows",
        "keywords": [
          "product management",
          "AI tools",
          "workflow automation",
          "professional productivity"
        ],
        "suggestedFilename": "product-manager-claude-code-workspace.jpg"
      },
      "brandCompliance": {
        "meetsGuidelines": true,
        "usesApprovedLanguage": true,
        "britishEnglish": true,
        "concerns": []
      }
    }
  ]
}
